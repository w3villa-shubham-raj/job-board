<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Company name</th>
      <th>Job Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Type</th>    
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name%><%=job.company_name ? job.company_name : "W3villa" %></td>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.total_post %></td>
        <td><%= job.ctc %></td>
        <td><%= link_to "view", job_path(job)%></td>
        <td><%= link_to "edit", edit_job_path(job) %></td>
        <td> <%= button_to "Delete",job_path(job), method: :delete, data: { confirm: "Are you sure?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New job", new_job_path %>
